{
  "env": {
    "es6": true,
    "browser": true,
    "commonjs": true
  },
  "rules": {
    "quotes": [2, "single", "avoid-escape"],
    "no-empty":  0,
    "indent": [2, 2],
    "semi": [2, "always"],
    "no-extra-semi": 2,
    "no-nested-ternary": 2,
    "no-undef": 2,
    "no-cond-assign": [2, "always"],
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-inner-declarations": [2, "both"],
    "no-debugger": 2,
    "eqeqeq": [2, "smart"],
    "new-cap": 2,
    "no-const-assign": 2,
    "no-redeclare": [2, {
      "builtinGlobals": true
    }],
    "no-use-before-define": 2,
    "comma-dangle": [2, "never"],
    "no-unused-vars": [2, {
      "vars": "all",
      "args": "after-used"
    }],
    // "no-warning-comments": [1, { "terms": ["todo", "fixme", "eslint", "global"], "location": "anywhere" }], // Discomment this line to lint possible refactoring tasks
    "no-irregular-whitespace": 2,
    "newline-after-var": [2, "always"],
    "one-var": [2, {
      "const": "never",
      "let": "never"
    }],
    "vars-on-top": 2,
    "key-spacing": 2,
    "object-curly-spacing": 2,
    "curly": [2, "multi"],
    "camelcase": 2,
    "operator-assignment": [2, "always"],
    "keyword-spacing": 2,
    "brace-style": [2, "1tbs", {
      "allowSingleLine": false
    }],
    "wrap-iife": [2, "outside"],
    "dot-notation": 2,
    "eol-last": 2,
    "no-multiple-empty-lines": [2, {
      "max": 1,
      "maxEOF": 1
    }]
  }
}
